			echo $this->Html->link(
			__('Filters'),
			array('action' => 'filters'),
			array(
				'class' => 'btn',
				'onclick' => 'loadModal("#history-filters", $(this).attr("href"));',
				'data-target' => '#history-filters',
				'data-toggle' => 'modal',
